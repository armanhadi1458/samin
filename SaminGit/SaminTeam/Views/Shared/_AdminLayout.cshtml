    <script>

        function LoadElement(pSelector) {

            $(pSelector).block({
                message: '<i class="icon-spinner4 spinner"></i><span class="text-semibold display-block">لطفا منتظر بمانید...</span>',
                overlayCSS: {
                    backgroundColor: '#fff',
                    opacity: 0.8,
                    cursor: 'wait'
                },
                css: {
                    border: 0,
                    padding: 0,
                    backgroundColor: 'transparent'
                }
            });

        }


        function UnLoadElement(pSelector) {

            $(pSelector).unblock();

        }

