    <div class="modal fade" id="adminChangePasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;">
        <div class="modal-dialog" role="document">
            <div class="modal-content" id="adminChangePasswordContent">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">
                        <i class="icon-lock"></i>
                        تغییر رمز عبور
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        @{
                            AjaxOptions ajaxOptionChangeAdminPassword = new AjaxOptions()
                            {
                                // Url = "/Home/ChangeUserPassword",
                                HttpMethod = "POST",
                                OnSuccess = "OnSuccessChangePassword",
                                OnFailure = "OnFailChangePassword",
                                OnBegin = "OnBeginChangePassword"
                            };
                        }
                        @using (Ajax.BeginForm("ChangeUserPassword", "Admin", null, ajaxOptionChangeAdminPassword, new { id = "frm_adminChange", @class = "", autocomplete = "off" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label">رمز عبور فعلی</label>
                                    <input class="form-control" data-val="true" data-val-minlength="رمز عبور فعلی اشتباه است" data-val-minlength-min="6" data-val-required="لطفا رمز عبور فعلی را وارد نماپید" id="OldPassword" maxlength="100" name="OldPassword" type="password" value="">
                                    <span class="field-validation-valid" data-valmsg-for="OldPassword" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label">رمز عبور جدید</label>
                                    <div class="label-indicator-absolute">
                                        <input class="form-control" data-val="true" data-val-minlength="رمز عبور باید حداقل 6 کاراکتر باشد" data-val-minlength-min="6" data-val-required="لطفا رمز عبور جدید را وارد نماپید" id="NewPassword" maxlength="100" name="NewPassword" type="password" value="">
                                        <span class="label password-indicator-label-absolute"></span>
                                    </div>
                                    <span class="field-validation-valid" data-valmsg-for="NewPassword" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label">تکرار رمز عبور جدید</label>
                                    <input class="form-control" data-val="true" data-val-equalto="رمز عبور جدید و تکرار رمز عبور جدید با هم یکسان نیستند" data-val-equalto-other="*.NewPassword" data-val-required="لطفا تکرار رمز عبور جدید را وارد نماپید" id="ReNewPassword" maxlength="100" name="ReNewPassword" type="password" value="">
                                    <span class="field-validation-valid" data-valmsg-for="ReNewPassword" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 text-right mt-20">
                                <button type="button" class="btn btn-default" data-dismiss="modal">انصراف</button>
                                <button type="submit" class="btn btn-primary">ثبت رمز عبور</button>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
