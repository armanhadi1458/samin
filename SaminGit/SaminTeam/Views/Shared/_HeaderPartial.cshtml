@model SaminProject.ViewModels.HeaderViewModel

<style>
    #logo a img{
        width: 130px;
        height: 30px;
    }
</style>

<div id="logo">
    <a href="/Home/Index"><img src="data:image/png;base64, @Model.LogoBase64" alt="لوگو" title="لوگو" /></a>
</div>
<nav id="nav-menu-container">
    <ul class="nav-menu">
        <li class="menu-active"><a href="/Home/Index">خانه</a></li>
        <li><a href="/AboutUs/Index">در باره ما</a></li>
        <li class="menu-has-children">
            <a href="/Product/List">محصولات</a>
