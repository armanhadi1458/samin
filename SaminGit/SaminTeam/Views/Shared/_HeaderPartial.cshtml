                @foreach (var product in Model.Products)
                {
                    <li><a href="@product.Value">@product.Key</a></li>
                }
            </ul>
        </li>
        <li class="menu-has-children">
            <a href="/Service/List">خدمات</a>
            <ul>
                @foreach (var service in Model.Services)
                {
                    <li><a href="@service.Value">@service.Key</a></li>
                }
            </ul>
        </li>
        <li><a href="/Project/List">پروژها</a></li>
        <li><a href="/News/List">اخبار</a></li>
        <li><a href="/Contact/Index">تماس</a></li>
