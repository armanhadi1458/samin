@model SaminProject.ViewModels.IndexViewModel
@{
    ViewBag.Title = "صفحه اصلی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start banner Area -->
<section class="banner-area relative" id="home" style="background: url(@Model.HeaderImage) center !important;">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                @if (!string.IsNullOrWhiteSpace(Model.DashboardTitle))
                {
                    <h1 class="text-white">@Model.DashboardTitle</h1>
                    <p class="text-white link-nav">@Model.DashboardSubTitle</p>
                }
                else
                {
                    <h1 class="text-white">گروه صنعتی تجاری ثمین</h1>
                    <p class="text-white link-nav">خوش آمدید</p>
                }
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start service Area -->
<section class="cat-area section-gap" id="feature">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 pb-30 header-text text-center" id="service-header">
                @if (!string.IsNullOrWhiteSpace(Model.ServiceTitle))
                {
                    <h1 class="mb-10">@Model.ServiceTitle</h1>
                    <p>
                        @Model.ServiceSubTitle
                    </p>
                }
                else
                {
                    <h1 class="mb-10"> خدمات </h1>
                    <p>
                        بهترین خدمات ارایه شده توسط مارا در زیر مشاهده مینمایید برای دیدن کلیه خدمات <a href="/Service/List">اینجا</a> کلیک نمایید ..
                    </p>
                }
            </div>
        </div>
        <div class="row">
            @foreach (var service in Model.Services)
            {
                Html.RenderPartial("_ServicePartial", service);
            }
            @{
                int empty = 3 - Model.Services.Count;
                if (empty > 0)
                {
                    for (int i = 0; i < empty; i++)
                    {
                        <div class="col-lg-4">
                            <div class="single-cat">
                                <a href="#" class="hb-sm-margin mx-auto d-block"><span class="hb hb-sm inv hb-facebook-inv"><span class="lnr lnr-question-circle"></span></span></a>
                                <h4 class="mt-40 mb-20">لورم ایپسوم</h4>
                                <p>
                                    لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است.
                                </p>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</section>
<!-- End service Area -->
<!-- Start faq Area -->
<section class="faq-area section-gap relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-3 col-md-6">
                <div class="single-faq">
                    <div class="circle">
                        <div class="inner"></div>
                    </div>
                    <h5><span class="counter">@Model.TotalProject</span></h5>
                    <p>
                        پروژه ها تکمیل شده
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="single-faq">
                    <div class="circle">
                        <div class="inner"></div>
                    </div>
                    <h5><span class="counter">@Model.TotalClient</span></h5>
                    <p>
                        مشترکین ماهیانه
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="single-faq">
                    <div class="circle">
                        <div class="inner"></div>
                    </div>
                    <h5 class="counter">@Model.TotalEmployees</h5>
                    <p>
                        کارمندان متخصص
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="single-faq">
                    <div class="circle">
                        <div class="inner"></div>
                    </div>
                    <h5 class="counter">@Model.TotalAgency</h5>
                    <p>
                        تعداد نمایندگی
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End faq Area -->
<!-- Start product Area -->
<section class="service-area section-gap" id="service">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 pb-30 header-text text-center" id="product-header">
                @if (!string.IsNullOrWhiteSpace(Model.ProductTitle))
                {
                    <h1 class="mb-10">@Model.ProductTitle</h1>
                    <p>
                        @Model.ProductSubTitle
                    </p>
                }
                else
                {
                    <h1 class="mb-10">محصولات</h1>
                    <p>
                        پر طرفدارترین محصولات مارا در زیر مشاهده مینمایید برای دیدن کلیه محصولات <a href="/Product/List">اینجا</a> کلیک نمایید ..
                    </p>
                }
            </div>
        </div>
        <div class="row">
            @{
                Html.RenderPartial("_ProductPartial", Model.Products);
                int emptyProduct = 3 - Model.Products.Count;
                if (emptyProduct > 0)
                {
                    for (int i = 0; i < emptyProduct; i++)
                    {
                        <div class="col-lg-4">
                            <div class="single-service">
                                <div class="thumb">
                                    <img src="/Content/img/s1.jpg" alt="img">
                                </div>
                                <h4>لورم ایپسوم</h4>
                                <p>
                                    لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است.
                                </p>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</section>
<!-- End product Area -->
