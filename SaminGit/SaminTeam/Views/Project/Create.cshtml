@model SaminProject.Models.Project
@{
    ViewBag.Title = "لیست پروژه ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section PageHeader{
    <div class="page-header page-header-default">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-arrow-right6 position-left"></i> <span class="text-semibold">مدیریت پروژه ها</span> - داشبورد</h4>
            </div>
        </div>
        <div class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><a href="/admin/index"><i class="icon-home2 position-left"></i> داشبورد</a></li>
                <li class="active">مدیریت پروژه ها</li>
            </ul>
        </div>


    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-white" id="form_panel">
            <div class="panel-heading">
                <h6 class="panel-title"><i class="icon-user-plus position-left"></i>ثبت پروژه جدید<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>

                <div class="heading-elements">
                    <ul class="icons-list">
                        <li><a data-action="collapse" class=""></a></li>
                    </ul>
                    <a class="heading-elements-toggle"><i class="icon-more"></i></a>
                </div>
            </div>

            <div class="panel-body">

                @if (TempData["Success"] != null)
                {
                    <div class="col-md-12">
                        <div class="alert alert-success alert-styled-left alert-arrow-left alert-component">
                            @TempData["Success"]
                        </div>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="col-md-12">
                        <div class="alert alert-danger alert-styled-left alert-arrow-left alert-component">
                            @TempData["Error"]
                        </div>
                    </div>
                }

                @using (Html.BeginForm("Create", "Project", FormMethod.Post, new { id = "frm_Project", autocomplete = "off", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.ID)

                    <div class="form-horizontal">
                        <div class="row">

                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.ProjectName, new { @class = "control-label" })
                                    @Html.TextBoxFor(x => x.ProjectName, new { @class = "form-control", @maxlength = 50 })
                                    @Html.ValidationMessageFor(x => x.ProjectName)
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Images, new { @class = "control-label" })
                                    <input name="Images" id="Images" type="file" class="file-input-ajax" multiple="multiple" />
                                    <div id="errorBlock" class="help-block"></div>
                                </div>
                            </div>
                            <div class="clearfix"></div>


                            <div class="text-center">
                                <button type="submit" id="submit" class="btn btn-primary">ثبت پروژه<i class="icon-add position-right"></i></button>
                                <a href="/Project/Index" class="btn btn-warning" id="btnCancle">بازگشت<i class="icon-undo position-right"></i></a>
                            </div>

                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Page/Project.js"></script>
}

