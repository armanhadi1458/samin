@model SaminProject.Models.Customer
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section PageHeader{
    <div class="page-header page-header-default">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-arrow-right6 position-left"></i> <span class="text-semibold">مدیریت مشتریان</span> - داشبورد</h4>
            </div>
        </div>
        <div class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><a href="/admin/index"><i class="icon-home2 position-left"></i> داشبورد</a></li>
                <li class="active">مدیریت مشتریان</li>
            </ul>
        </div>


    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-white" id="form_panel">
            <div class="panel-heading">
                <h6 class="panel-title"><i class="icon-user-plus position-left"></i>ثبت مشتری جدید<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>

                <div class="heading-elements">
                    <ul class="icons-list">
                        <li><a data-action="collapse" class=""></a></li>
                    </ul>
                    <a class="heading-elements-toggle"><i class="icon-more"></i></a>
                </div>
            </div>

            <div class="panel-body">

                @if (TempData["Success"] != null)
                {
                    <div class="col-md-12">
                        <div class="alert alert-success alert-styled-left alert-arrow-left alert-component">
                            @TempData["Success"]
                        </div>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="col-md-12">
                        <div class="alert alert-danger alert-styled-left alert-arrow-left alert-component">
                            @TempData["Error"]
                        </div>
                    </div>
                }

                @using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { id = "frm_customers", @class = "", autocomplete = "off", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.ID)
                    @Html.HiddenFor(x => x.Base64Image)

                    <div class="row">

                        <div class="col-sm-6">
                            <fieldset>
                                <legend><i class="icon-user mr-5"></i>اطلاعات مشتری</legend>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Name, new { @class = "control-label" })
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @maxlength = 100 })
                                            @Html.ValidationMessageFor(x => x.Name)
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Email, new { @class = "control-label" })
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @maxlength = 100 })
                                            @Html.ValidationMessageFor(x => x.Email)
                                        </div>
                                    </div>


                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.PhoneNumber, new { @class = "control-label" })
                                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control Phone"})
                                            @Html.ValidationMessageFor(x => x.PhoneNumber)
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Address, new { @class = "control-label" })
                                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @maxlength = 250 })
                                            @Html.ValidationMessageFor(x => x.Address)
                                        </div>
                                    </div>
                                </div>

                            </fieldset>
                        </div>


                        <div class="col-sm-6">
                            <fieldset>
                                <legend><i class="icon-image2 mr-5"></i>لوگو</legend>
                                <div class="col-sm-6">
                                    <div class="kv-avatar col-sm-offset-4">
                                        <div class="file-loading">
                                            <input id="avatar" name="ContentFile" type="file">
                                        </div>
                                    </div>
                                    <div class="kv-avatar-hint"><small>حداکثر حجم مجاز 200 کیلوبایت </small></div>
                                </div>

                                <div class="clearfix"></div>
                                <div class="text-danger text-center" id="kv-error"></div>
                            </fieldset>
                        </div>

                        <div class="clearfix"></div>

                        <div class="text-center">
                            <button type="submit" id="submit" class="btn btn-primary">ثبت مشتری<i class="icon-add position-right"></i></button>
                            <a href="/Customer/Index" class="btn btn-warning" id="btnCancle">بازگشت<i class="icon-undo position-right"></i></a>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assest/js/plugins/uploaders/fileinput.min.js"></script>
    <script src="~/assest/js/plugins/uploaders/fileinput.fa.lang.js"></script>
    <script src="~/Scripts/Page/Customer.js"></script>
}